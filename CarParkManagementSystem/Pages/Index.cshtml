@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Park Management</title>
    <link rel="stylesheet" href="~/css/Styles.css">
</head>
<body>
    <div class="container">
        <h1>Car Park Management</h1>

        <div id="car-list">
            <h2>Car List</h2>
            <table>
                <thead>
                    <tr>
                        <th>Employee Name</th>
                        <th>Car Registration Number</th>
                        <th>Car Make</th>
                        <th>Car Model</th>
                        <th>Colour</th>
                        <th>Year</th>
                        <th>Approved Status</th>
                        <th>Date Approved</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="car-table-body">
                    <!-- Car rows will be added here -->
                </tbody>
            </table>
        </div>

        <div id="car-form">
            <h2 id="form-title">Add New Car</h2>
            <form id="add-car-form">
                <label for="employeeName">Employee Name</label>
                <input type="text" id="employeeName" name="employeeName" required>
                
                <label for="carRegistrationNumber">Car Registration Number</label>
                <input type="text" id="carRegistrationNumber" name="carRegistrationNumber" required>

                <label for="carMake">Car Make</label>
                <input type="text" id="carMake" name="carMake" required>

                <label for="carModel">Car Model</label>
                <input type="text" id="carModel" name="carModel" required>

                <label for="colour">Colour</label>
                <input type="text" id="colour" name="colour" required>

                <label for="year">Year</label>
                <input type="number" id="year" name="year" required>

                <label for="isApproved">Approval Status</label>
                <select id="isApproved" name="isApproved">
                    <option value="true">Approved</option>
                    <option value="false">Pending</option>
                </select>

                <label for="dateApproved">Date Approved</label>
                <input type="date" id="dateApproved" name="dateApproved">

                <button type="submit" id="submit-button">Add Car</button>
            </form>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>

